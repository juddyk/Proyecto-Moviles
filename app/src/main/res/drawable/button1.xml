<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <corners
                android:radius="150dip" />
            <stroke
                android:width="0dip"
                android:color="@color/aliceblue" />
            <gradient
                android:angle="-90"
                android:startColor="@color/turquoise"
                android:endColor="@color/skyblue" />
        </shape>
    </item>

    <item >
        <shape android:shape="oval"  >
            <corners
                android:radius="150dip" />
            <stroke
                android:width="0dip"
                android:color="@color/aliceblue" />
            <gradient
                android:angle="-90"
                android:startColor="@color/skyblue"
                android:endColor="@color/turquoise" />
        </shape>
    </item>
</selector>